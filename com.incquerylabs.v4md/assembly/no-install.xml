    <assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
      <id>no-install</id>
      <includeBaseDirectory>false</includeBaseDirectory> 
      <formats>
        <format>zip</format>
      </formats>
      <moduleSets>
      	<moduleSet>
      		<binaries>
      		</binaries>
      	</moduleSet>
      </moduleSets>
      <dependencySets>
      	<dependencySet>
      		<includes>
      			<include>org.eclipse.viatra:*:*:*</include>
      			<include>org.eclipse.collections:*:*:*</include>
      			<include>com.google.guava:guava:*:*</include>
      			<include>log4j:log4j:*:*</include>
      			<include>org.eclipse.xtext:org.eclipse.xtext.xbase.lib:*:*</include>
      			<include>org.eclipse.xtend:org.eclipse.xtend.lib.macro:*:*</include>
      		</includes>
      		<excludes>
      			<exclude>org.eclipse.viatra:viatra-query-runtime:*:*</exclude>
      			<exclude>org.eclipse.viatra:viatra-transformation-runtime:*:*</exclude>
      			<exclude>org.eclipse.viatra:viatra-transformation-debugger-runtime:*:*</exclude>
      		</excludes>
      		<outputDirectory>plugins/com.incquerylabs.v4md/lib</outputDirectory>
      		<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      	</dependencySet>
      </dependencySets>
      <files>
        <file>
        	  <source>${project.basedir}/../LICENSE</source>
          <outputDirectory>./</outputDirectory>
          <destName>EULA_V4MD.txt</destName>
        </file>
        <file>
        	  <source>${project.build.directory}/${project.artifactId}-${project.version}.${project.packaging}</source>
        	  <outputDirectory>plugins/com.incquerylabs.v4md</outputDirectory>
        	  <destName>${project.artifactId}.${project.packaging}</destName>
        </file>
        <file>
        	  <source>${project.basedir}/descriptor.xml</source>
        	  <outputDirectory>data/resourcemanager</outputDirectory>
        	  <destName>V4MD_15253_descriptor.xml</destName>
        </file>
      </files>
      <fileSets>
        <fileSet>
          <directory>${project.basedir}</directory>
          <outputDirectory>plugins/com.incquerylabs.v4md</outputDirectory>
          <includes>
            <include>plugin.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </assembly>