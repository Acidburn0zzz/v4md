    <assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
      <id>installer</id>
      <includeBaseDirectory>false</includeBaseDirectory> 
      <formats>
        <format>zip</format>
      </formats>
      <moduleSets>
      	<moduleSet>
      		<binaries>
      		</binaries>
      	</moduleSet>
      </moduleSets>
      <dependencySets>
      	<dependencySet>
      		<includes>
      			<include>org.eclipse.viatra:*:*:*</include>
      			<include>org.eclipse.collections:*:*:*</include>
      			<include>com.google.guava:guava:*:*</include>
			    <include>org.eclipse.xtext:org.eclipse.xtext.xbase.lib:*:*</include>
      			<include>org.eclipse.xtend:org.eclipse.xtend.lib.macro:*:*</include>
      		</includes>
      		<outputDirectory>files/plugins/com.incquerylabs.v4md/lib</outputDirectory>
      		<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      	</dependencySet>
      </dependencySets>
      <files>
        <file>
        	  <source>${project.basedir}/../LICENSE</source>
          <outputDirectory>files/</outputDirectory>
          <destName>EULA_V4MD.txt</destName>
        </file>
        <file>
        	  <source>${project.build.directory}/${project.artifactId}-${project.version}.${project.packaging}</source>
        	  <outputDirectory>files/plugins/com.incquerylabs.v4md</outputDirectory>
        	  <destName>${project.artifactId}.${project.packaging}</destName>
        </file>
      </files>
      <fileSets>
        <fileSet>
          <directory>${project.basedir}</directory>
          <outputDirectory>/</outputDirectory>
          <includes>
            <include>descriptor.xml</include>
          </includes>
        </fileSet>
        <fileSet>
          <directory>${project.basedir}</directory>
          <outputDirectory>files/plugins/com.incquerylabs.v4md</outputDirectory>
          <includes>
            <include>plugin.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </assembly>